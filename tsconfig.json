{
  "compilerOptions": {
    "alwaysStrict":true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "sourceMap": true,
    "lib": ["dom", "es6"]
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
